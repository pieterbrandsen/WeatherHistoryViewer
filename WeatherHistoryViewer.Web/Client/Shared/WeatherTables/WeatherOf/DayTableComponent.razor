@using WeatherHistoryViewer.Core.Models.Weather
<table class="table table-bordered" style="width: auto;">
    <thead>
    <tr>
        <th>Year</th>
        <th>Avg temp</th>
        <th>Min temp</th>
        <th>Max temp</th>
        <th>Sun hours</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var day in WeatherOfDay)
    {
        <tr>
            <td>@day.Date</td>
            <td class="@day.CssClass.AvgTemp">@day.AvgTemp°C</td>
            <td class="@day.CssClass.MinTemp">@day.MinTemp°C</td>
            <td class="@day.CssClass.MaxTemp">@day.MaxTemp°C</td>
            <td class="@day.CssClass.SunHour">@day.SunHour h</td>
        </tr>
    }
    </tbody>
</table>

@code {

    [Parameter]
    public List<HistoricalWeather> WeatherOfDay { get; set; }

}